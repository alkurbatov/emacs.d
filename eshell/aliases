# Common aliases
alias cls clear 1  # force 'clear' to behave like in usual shell

# Git aliases
alias gb magit-show-refs
alias gco git checkout
alias gd magit-diff-unstaged
alias gdc magit-diff-staged
alias gl git pull
alias glg git log --color --graph --oneline --abbrev-commit --decorate --date=short --pretty=format:"%C(cyan)%h %C(yellow)%ad %C(bold green)%d %C(reset)%s <%C(bold blue)%an>"
alias gs git status -sb
